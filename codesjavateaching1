//Java Comparison Operators //Equal to
public class Main{
    public static void main(String[]args){
      int x = 4;
       int y = 3;
    
    System.out.println(x == y); // returns false because 4 is not equal to 3
  
  //Not equal
  public class Main{
    public static void main(String[]args){
      int x = 4;
       int y = 3;
    
    System.out.println(x != y); // returns true because 4 is not equal to 3
    
    //Greater than
    public class Main{
    public static void main(String[]args){
      int x = 4;
       int y = 3;
    
    System.out.println(x > y); // returns true because 4 is greater than 3
    
    //less than
    public class Main{
    public static void main(String[]args){
      int x = 4;
       int y = 3;
    
    System.out.println(x < y); // returns false because 4 is greater than 3
    
    //Greater than or equal to
    public class Main{
    public static void main(String[]args){
      int x = 4;
       int y = 3;
    
    System.out.println(x >= y); // returns true because 4 is greater than 3
  
        
    }
}

//Less than or equal to
public class Main{
    public static void main(String[]args){
      int x = 4;
       int y = 3;
    
    System.out.println(x <= y); // returns false because 4 is greater than 3
  
        
    }
}

  //Java Logical Operators //Logical and
  public class Main{
    public static void main(String[]args){
      int x = 5;
       
    
    System.out.println(x > 3 && x < 10); //returns true as x is more than 3 and less than 10
  
        
    }
}
  
    //Java Logical Operators //Logical or
    public class Main{
    public static void main(String[]args){
      int x = 5;
       
    
    System.out.println(x > 3 || x < 40); //returns true as x is more than 3 and less than 40
  
        
    }
}

//Java Logical Operators //Logical Not //Reverse the result, returns false if the result is true

public class Main{
    public static void main(String[]args){
      int x = 5;
       
    
    System.out.println(!(x > 3 && x < 10));
  
        
    }
}
